---
interface Props {
  name: string;
  results: {
    estaciones: number;
    lunasLlenas: number;
    puestasSol: number;
  };
}

const { name, results } = Astro.props;

const shareText = `¡Hola! Soy ${name} y estos son mis ciclos naturales de vida: 
🌍 ${results.estaciones.toLocaleString()} estaciones
🌕 ${results.lunasLlenas.toLocaleString()} lunas llenas
🌅 ${results.puestasSol.toLocaleString()} puestas de sol`;

const twitterUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}`;
const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}&quote=${encodeURIComponent(shareText)}`;
---

<div class="flex flex-col items-center gap-4 mt-8 mb-12">
  <p class="text-gray-300 text-lg">Comparte tus resultados:</p>
  <div class="flex gap-4">
    <a
      href={twitterUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-2 px-6 py-3 bg-[#1DA1F2] hover:bg-[#1a8cd8] text-white font-semibold rounded-lg transition-colors"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      Compartir en X
    </a>
    <a
      href={facebookUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-2 px-6 py-3 bg-[#1877F2] hover:bg-[#166fe5] text-white font-semibold rounded-lg transition-colors"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
      Compartir en Facebook
    </a>
  </div>
</div>